page {
    color: #666666;
    padding: 10rpx;
}
/* 首页导航 */
.nav{
    /* 不换行 */
    white-space: nowrap;
    padding:5rpx 0;
}
.nav_item {
    padding:20rpx 45rpx;
    font-size: 30rpx;
    display:inline-block;
}
.active {
    border-bottom: 5rpx solid #de68bd;
}
/* 轮播图 */
.slides {
    margin-top: 10rpx;
}
.slides swiper{
    height: 220rpx;
}
.slides navigator{
    width: 100%;
    height: 100%;
}
.slides image{
    width: 100%;
    height: 100%;
}
/* 视频列表 */
.video_wrap{
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    padding: 5rpx;
}
.video_item{
    width: 48%;
    margin-bottom: 20rpx; 
}
.video_img{
    position: relative;
}
.video_img image{
    border-radius: 25rpx;
    width: 100%;
}
.video_img .video_info{
    position: absolute;
    bottom: 10rpx;
    left: 0;
    width: 100%;
    display: flex;
    justify-content: space-around;
    font-size: 24rpx;
    color: #ffff;
}
.video_title {
    font-size: 28rpx;
    /* 文字...的写法 */
    display: -webkit-box;
    overflow: hidden;
    white-space: normal;
    word-wrap: break-word;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}